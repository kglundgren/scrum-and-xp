@*@model IEnumerable<scrum_and_xp.Models.InformalPost>*@
@model scrum_and_xp.ViewModels.InformalPostViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Informal</h2>

<p>
    @Html.ActionLink("Create New", "Create", routeValues: new { type = "Informal" })
</p>

@Html.DropDownListFor(m => m.SelectedCategoryId, Model.InformalCategories, "Please select informal category", new { @class = "form-control", @onchange = "FilterInformalPosts()" })

<br />

<div id="d1"> </div>

<table class="table" id="t1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InformalPosts.FirstOrDefault().Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InformalPosts.FirstOrDefault().Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InformalPosts.FirstOrDefault().PostTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InformalPosts.FirstOrDefault().AuthorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InformalPosts.FirstOrDefault().InformalCategories)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.InformalPosts)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostTime)
            </td>
            <td>
                @{
                    var author = item.AuthorId.FirstName + " " + item.AuthorId.LastName;
                }
                @author
            </td>
            <td>
                @foreach (var cat in item.InformalCategories)
                {
                    if (item.InformalCategories.Count > 1)
                    {
                        <span>@cat.Name,</span>
                    }
                    else
                    {
                        <span>@cat.Name</span>
                    }
                }
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>


@section Scripts {
    <script>
        function FilterInformalPosts() {
            var catId = $('#SelectedCategoryId').val();
            $.ajax({
                url: '/Posts/FilterInformalPosts',
                type: "GET",
                dataType: "JSON",
                data: { Category: catId },
                success: function (data) {
                    $("#d1").html(""); // clear before appending new list
                    $.each(data, function (index, item) {

                        var $panelPrimary = $('<div id=panel-primary' + index + ' class="panel panel-primary"></div>'),
                            $panelHeading = $('<div class="panel-heading"></div>'),
                            $panelTitle = $('<h3 class="panel-title"></h3>'),
                            $panelBody = $('<div class="panel-body"></div>');

                        $('#d1').append($panelPrimary);
                        $('#panel-primary' + index).append([
                            $panelHeading
                                .append($panelTitle)
                                .text(item.Title),
                            $panelBody
                                .text(item.Content)
                                .append('<br /><br />')
                                .append('<span class=text-info>Tag: ' + item.InformalCategories[0].Name + '</span>')
                                .append('<hr>')
                                .append(item.AuthorId.FirstName + ' ' + item.AuthorId.LastName)
                                .append('<br />')
                                .append(item.PostTime)
                        ]);
                    });
                }
            });
        }

//$("#d1").append($("<p style='border-style: ridge; border-color: #cccccc; padding: 5px'>").append([
//    "Title: " + item.Title + '<br />',
//    "Content: " + item.Content + '<br />',
//    "Author: " + item.AuthorId.FirstName + " " + item.AuthorId.LastName + '<br />',
//    "Post time: " + item.PostTime
//]));

    </script>
}

