@using scrum_and_xp.ViewModels
@model List<NewUserViewModel>
@{
    ViewBag.Title = "NewUsers";

}

<h2>NewUsers</h2>

<table class="table">
    <tr>
        <th>
            MailAdress
        </th>
        <th>
            AnvändarId
        </th>
        <th>
            Förnamn
        </th>
        <th>
            Efternamn
        </th>

    </tr>
    @if (Model.Any())
    {
        foreach (var role in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => role.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => role.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => role.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => role.LastName)

                </td>
            </tr>
        }
    }

</table>

<a href="@Url.Action("EditUsersInRole", "Role", new { RoleId = ViewBag.Role })" class="btn btn-primary">Grant Access to new Users here</a>