@model IEnumerable<scrum_and_xp.Models.UpcomingMeetingViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "UpcomingMeetings")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Option1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Option2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Option3)
        </th>

        <th></th>
    </tr>

    @for (int i = 0; i < Model.Count(); i++)
    {
        using (Html.BeginForm())
        {

        @Html.AntiForgeryToken()
        <tr>
            <td>
                @Html.DisplayFor(m => Model.ElementAt(i).Description)
            </td>
            <td>
                @Model.ElementAt(i).Option1 - @Model.ElementAt(i).Option1.AddHours(Model.ElementAt(i).Duration.Hours)
                @Html.RadioButtonFor(m => Model.ElementAt(i).SelectedResponse, @Model.ElementAt(i).Option1)
            </td>
            <td>
                @Model.ElementAt(i).Option2 - @Model.ElementAt(i).Option2.AddHours(Model.ElementAt(i).Duration.Hours)
                @Html.RadioButtonFor(modelItem => Model.ElementAt(i).SelectedResponse, @Model.ElementAt(i).Option2)
            </td>
            <td>
                @Model.ElementAt(i).Option3 - @Model.ElementAt(i).Option3.AddHours(Model.ElementAt(i).Duration.Hours)
                @Html.RadioButtonFor(modelItem => Model.ElementAt(i).SelectedResponse, @Model.ElementAt(i).Option3)
            </td>
            <td>
                @Html.HiddenFor(m => Model.ElementAt(i).Id)
                @Html.HiddenFor(m => Model.ElementAt(i).Author)
                @Html.HiddenFor(m => Model.ElementAt(i).Duration)
                


            </td>
            <td><input type="submit" value="Pick time" /> </td>
        </tr>
    }}

</table>
