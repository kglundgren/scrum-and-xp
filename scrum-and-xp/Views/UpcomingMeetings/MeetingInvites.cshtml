@model IEnumerable<scrum_and_xp.Models.UpcomingMeetingViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "UpcomingMeetings")
</p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Option1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Option2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Option3)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            using (Html.BeginForm())
            { 
                @Html.AntiForgeryToken()
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @item.Option1 - @item.Option1.AddHours(item.Duration.Hours)
                    @Html.RadioButtonFor(modelItem => item.SelectedResponse, item.Option1)
                </td>
                <td>
                    @item.Option2 - @item.Option2.AddHours(item.Duration.Hours)
                    @Html.RadioButtonFor(modelItem => item.SelectedResponse, item.Option2)
                </td>
                <td>
                    @item.Option3 - @item.Option3.AddHours(item.Duration.Hours)
                    @Html.RadioButtonFor(modelItem => item.SelectedResponse, item.Option3)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
                <td><input type="submit" value="Pick time" /> </td>
            </tr>
        }}

    </table>
@section Scripts{
   <script>
       function test() {
           alert($("input[name='item.SelectedResponse']").val());
    }
    </script> 
    }

